# Scripts location
set $scripts_dir /home/leo/.config/i3-regolith/scripts

# Connect to VPN
bindsym $mod+Shift+n exec $scripts_dir/vpn_toggle.sh leo.palmer

# I get an error in Journal since we don't specify font
# outside of "Bar"
font pango:Source Code Pro Medium 13


####################################


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 6 px or 6 ppt
        bindsym Down resize grow height 6 px or 6 ppt
        bindsym Up resize shrink height 6 px or 6 ppt
        bindsym Right resize grow width 6 px or 6 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Disable titlebar
new_window pixel 1
new_float pixel 1

# Gaps (i3-gaps)
gaps inner 5
gaps outer 0

smart_gaps on

# Window Border color
client.focused          #002b36 #586e75 #fdf6e3 #268bd2
client.focused_inactive #002b36 #073642 #839496 #073642
client.unfocused        #002b36 #073642 #839496 #073642
client.urgent           #002b36 #dc322f #fdf6e3 #002b36

# Enable popup during fullscreen
popup_during_fullscreen smart

focus_follows_mouse no

# Configure the bar
bar {
  font pango:Source Code Pro Medium 13
  separator_symbol " "
  status_command i3blocks
  tray_output none


  # Solarized theme
#  colors {
#      background $base03
#      statusline $base1
#      separator  $blue
##                        BORDER  BACKGROUND TEXT
#      focused_workspace  $base02  $base02  $base2
#      active_workspace   $base02  $base02  $base01
#      inactive_workspace $base03  $base03  $base01
#      urgent_workspace   $red     $red     $base3
#  }

  # Nord theme
  colors {
    background $nord0
    statusline $nord11

    separator  $nord9
#                      BORDER  BACKGROUND TEXT
    focused_workspace  $nord3  $nord3     $nord6
    active_workspace   $nord3  $nord2     $nord6
    inactive_workspace $nord1  $nord1     $nord4
    urgent_workspace   $nord1  $nord12    $nord6
  }
}

# Assign some windows to workspaces
assign [class="Signal"] $ws9

# can't assign spotify because of
# https://github.com/i3/i3/issues/2060#issuecomment-155179472
for_window [class="Spotify"] move to workspace $ws6
assign [class="Signal"] $ws9
assign [class="Slack"] $ws5

# Run other programs with i3

# Composite manager
exec --no-startup-id compton -f --config /etc/xdg/compton.conf

# Lanuch the shortcut Conky window on first login
exec --no-startup-id /usr/bin/regolith-ftue.sh

# Hide the mouse pointer if unused for a duration
exec --no-startup-id /usr/bin/unclutter -b

# Draw the desktop background.  Randomly select from a series of photos starting with ESP_
exec_always --no-startup-id feh --bg-scale --randomize /usr/share/backgrounds/ESP_*

# Refresh wallpaper when monitor configuration changes.
exec --no-startup-id /usr/bin/xeventbind resolution /usr/bin/wallpaper-refresh.sh

